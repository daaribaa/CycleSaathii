<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cs"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Profile Page"
        android:layout_gravity="center"
        android:shadowColor="@color/cardview_shadow_end_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Name:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/profileName"
        android:text="Jenish Maharjan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Address:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/profileAddress"
        android:text="Dhalko, Chettrapati"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Email:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/profileEmail"
        android:text="jenishmhr1maharjan@gmail.com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="Contact:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/profileContact"
        android:text="9843094222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="User Name:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:id="@+id/profileUserName"
        android:text="sinnnez"/>

    <Button
        android:id="@+id/profileToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Homepage"
        android:layout_gravity="center"
        android:shadowColor="@color/cardview_shadow_end_color"/>

</LinearLayout>